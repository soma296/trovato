<div class="text-center">
  <br><br><br><br>
  <% if @task.errors.present? %>
    <h3>エラーがあります。</h3>
    <div class="field_with_errors">
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br>
  <%= form_for @task, url: {action: :create} do |f| %>
    <p><%= f.label :deadline, ' 課題期限　' %>
    <%= f.datetime_field :deadline %></p>
    <p><%= f.label :title, ' 　教科名　' %>
    <%= f.text_field :title %></p>
    <p><%= f.label :content, ' 　内容　　' %>
    <%= f.text_field :content %></p>
    <p><%= f.label :details, ' 　詳細　' %>
  　<%= f.text_field :details %></p>
  　<p class="fuga"><%= f.label :done, '完了？　' %>
    <%= f.select :done, ['未完了'] %></p><br>
    <br>
    &emsp;<%= f.submit '登録', class: "btn btn-success" %>
    <br>
    <br>
    <br>
  <div class="sub-image"></div>
  <div class="talker">

  
  <svg height="35" width="90">
  <polygon id="btn-triangle" points="-130,50 0,-0 100,100" style="fill:#e0edff;cursor:pointer" />
</svg>
  
